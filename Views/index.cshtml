<h1>Hair Salon</h1>
<hr>
<h2>Stylists:</h2>
@if(Model.Count==0)
{
  <h4>-No stylists in the system-</h4>
}
else
{
  <ul>
    @foreach(var stylist in Model)
    {
      <li><a href="#">@stylist.name</a></li>
    }
  </ul>
}
<hr>
<h2>Add Stylist</h2>
<form action="/stylists/new" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name">
  <br>
  <br>
  <label for="avail">Days Available:</label>
  <input type="text" name="avail">
  <br>
  <br>
  <label for="notes">Notes:</label>
  <br>
  <textarea name="notes" rows="8" cols="40"></textarea>
  <br>
  <button type="submit">Add</button>
</form>
<hr>
